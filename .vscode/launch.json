    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Metrics API - debug",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/api/index.js",
            "cwd": "${workspaceFolder}/api",
            "restart": true
        },
        {
            "type": "python",
            "name": "Metrics dashboard - debug",
            "request": "launch",
            "cwd": "${workspaceFolder}/dashboard",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/dashboard/main.py"
        }
    ]
}